{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist/server",
    "rootDir": ".",
    "rootDirs": ["server", "shared"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "composite": false,
    "types": ["node"]
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "**/*.test.ts", "**/*.spec.ts", "moderation", "server/vite.ts"]
}