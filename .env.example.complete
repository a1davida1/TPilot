# ThottoPilot Environment Variables - Complete Template
# Copy this to .env and fill in your values

# ============================================
# CRITICAL FOR BETA (Set these NOW!)
# ============================================

# Database (Required)
DATABASE_URL=postgresql://postgres:localdev@localhost:5432/thottopilot

# Authentication (Required for production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this
SESSION_SECRET=your-super-secret-session-key-min-32-chars-long-change-this

# Admin Account (Required for admin panel)
ADMIN_EMAIL=admin@thottopilot.com
ADMIN_PASSWORD=your-secure-admin-password-here
# Or use ADMIN_PASSWORD_HASH instead (more secure)
# ADMIN_PASSWORD_HASH=$2b$10$...

# Error Tracking (CRITICAL - Set this NOW!)
SENTRY_DSN=https://your-key@oXXXXXX.ingest.sentry.io/XXXXXXX
# Sign up free at https://sentry.io (5000 errors/month free)

# ============================================
# REQUIRED FOR CORE FEATURES
# ============================================

# Reddit API (Required for Reddit features)
REDDIT_CLIENT_ID=your-reddit-app-id
REDDIT_CLIENT_SECRET=your-reddit-app-secret
REDDIT_REDIRECT_URI=http://localhost:3005/api/reddit/callback
REDDIT_USER_AGENT=ThottoPilot/1.0.0

# OpenRouter AI (Required for caption generation)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Imgur (Required for image uploads)
IMGUR_CLIENT_ID=your-imgur-client-id
IMGUR_CLIENT_SECRET=your-imgur-client-secret

# Stripe (Required for payments)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_STARTER=price_starter_id
STRIPE_PRICE_ID_PRO=price_pro_id  
STRIPE_PRICE_ID_PREMIUM=price_premium_id

# ============================================
# OPTIONAL BUT RECOMMENDED
# ============================================

# Redis (For production - better sessions/queues)
# REDIS_URL=redis://localhost:6379
# Or use PostgreSQL for queues instead:
USE_PG_QUEUE=true

# Email (For notifications)
# SENDGRID_API_KEY=SG.your-sendgrid-key
# EMAIL_FROM=noreply@thottopilot.com

# App Configuration
NODE_ENV=development
PORT=3005
APP_BASE_URL=http://localhost:3005

# Security
CORS_ORIGIN=http://localhost:5173
COOKIE_SECURE=false  # Set to true in production with HTTPS

# ============================================
# FEATURE FLAGS
# ============================================

# ImageShield (Currently disabled)
IMAGESHIELD_ENABLED=false
WATERMARK_ENABLED=true
WATERMARK_TEXT=ThottoPilot
WATERMARK_OPACITY=0.18

# Rate Limiting
MAX_POSTS_PER_SUBREDDIT_24H=1
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Tier Limits
DAILY_GENERATIONS_FREE=5
DAILY_GENERATIONS_STARTER=50
DAILY_GENERATIONS_PRO=500
DAILY_GENERATIONS_PREMIUM=9999

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Debug Options
DEBUG=false
VERBOSE_LOGGING=false
SQL_LOGGING=false

# Test Accounts (Dev only - remove in production!)
# TEST_USER_EMAIL=test@example.com
# TEST_USER_PASSWORD=testpass123

# ============================================
# MONITORING (Set these for production!)
# ============================================

# Uptime Monitoring
# UPTIMEROBOT_API_KEY=ur-xxxxx

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# ============================================
# BACKUP REMINDER
# ============================================
# 
# ⚠️ IMPORTANT: Back up this file securely!
# Options:
